#!/bin/bash -e

. init.sh

if [ -n "$1" ]; then
    ORIG_DEST_DIR="$1"
else
    ORIG_DEST_DIR=/tmp/luwrain-iso
fi

for LANG in $ISO_LANGS; do
    DEST_DIR=$ORIG_DEST_DIR/ubuntu-15.10-$LANG
    for i in profile etc opt bin; do
	mkdir -p "$DEST_DIR/$i"
    done
    OPT="$DEST_DIR/opt"
    mkdir "$OPT/greeter"
    cp -r "$SRC_DIR/linux/greeter/langs/$LANG/." "$OPT/greeter"
    mkdir -p "$OPT/luwrain"
    pushd "$SRC_DIR/base/scripts"
    ./lwr-dist-linux "$OPT/luwrain"
    popd
done
