#!/bin/sh -e

. init.sh
cd "$SRC_DIR"

for i in base linux windows luwrain pim doctree; do
    cd "$i"
    ant
    cd ..
done

for i in $APPS; do
    cd app-$i
    ant
    cd ..
done

cd i18n
for i in $LANGS; do
    cd $i
    ant
    cd ..
done
cd ..

cd extensions
for i in $EXTENSIONS; do
    cd $i
    ant
    cd ..
done
cd ..

echo Everything is built successfully!
