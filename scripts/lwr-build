#!/bin/bash -e
# Copyright 2012-2024 Michael Pozhidaev <msp@luwrain.org>
# The LUWRAIN Project, GPL v.3

. init.sh

lwr-ant-gen-all
lwr-build-mvn

for i in $APPS; do
    cd app-$i
    ant -emacs
    cd ..
done

cd extensions
for i in $EXTENSIONS; do
    cd $i
    ant -emacs
    cd ..
done
cd ..

cd i18n
for i in $LANGS; do
    cd $i
    ant -emacs
    cd ..
done
cd ..

echo Everything is built successfully!
