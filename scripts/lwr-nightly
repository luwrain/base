#!/bin/bash -e

TEMP_DIR=$(mktemp -d)
SRC_RES_DIR=luwrain-nightly-$(date --iso-8601)

echo "Working in $TEMP_DIR"
cd $TEMP_DIR
mkdir src
cd src
git clone https://github.com/luwrain/base.git &> clone-base.log
cd base/scripts

./lwr-checkout &> checkout.log
./lwr-distr-src "$TEMP_DIR/$SRC_RES_DIR"
./lwr-prepare
./lwr-build
#./lwr-distr-linux
#./lwr-distr-iso

echo 'OK!'
